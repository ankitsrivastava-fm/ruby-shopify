<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-primary mb-4">Your Store Details</h2>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Store Name: <%= @store.name %></h5>

          <p class="card-text">
            <strong>Description:</strong> <%= @store.description %> <br>
            <strong>Currency:</strong> <%= @store.currency %> <br>
            <strong>Timezone:</strong> <%= @store.timezone %> <br>
            <strong>Address:</strong> <%= @store.address %> <br>
          </p>

          <div class="store-logo mt-3">
            <%= image_tag @store.logo, class: "img-fluid" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>